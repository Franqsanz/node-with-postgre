{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "/*",
    "strict": true,
    "pretty": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": [
    "/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}